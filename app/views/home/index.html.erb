<div class="row">
<% @posts.each do |post| %>
<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <img src="http://placekitten.com/g/340/300" alt="...">
    <span class="label label-primary">#société</span>
    <div class="caption">
      <h3><%= link_to post.question, post %></h3>
      <p><%= truncate("#{post.answer}", length: 150, separator: ' ') %></p>
		<!-- Split button -->
		<div class="btn-group">
		  <button type="button" class="btn btn-xs btn-danger">JEDI Admin</button>
		  <button type="button" class="btn btn-danger btn-xs dropdown-toggle" data-toggle="dropdown">
		    <span class="caret"></span>
		    <span class="sr-only">Toggle Dropdown</span>
		  </button>
		  <ul class="dropdown-menu" role="menu">
		    <li><%= link_to 'Edit', edit_post_path(post) %></li>
		    <li><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
		    <li class="divider"></li>
		    <li><%= link_to 'New Post', new_post_path %></li>
		    <li><%= link_to 'All Posts', posts_path %></li>
		  </ul>
		</div>
    </div>
  </div>
</div>
<% end %>
</div>

