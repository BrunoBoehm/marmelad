<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answ1</th>
      <th>Answ2</th>
      <th>Answ3</th>
      <th>Answer</th>
      <th>Featured</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.question %></td>
        <td><%= post.answ1 %></td>
        <td><%= post.answ2 %></td>
        <td><%= post.answ3 %></td>
        <td><%= post.answer %></td>
        <td><%= post.featured %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
