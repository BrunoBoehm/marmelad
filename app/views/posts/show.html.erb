<div class="panel panel-default">
  <div class="panel-body">

    <% if notice then %>
    <div class="alert alert-warning" role="alert"><%= notice %></div>
    <% end %>

    <a class="pull-right photo" href="#"><img src="http://placekitten.com/g/340/300" alt="" title=""></a>

    <h2>
      <%= @post.question %>
    </h2>

    <p>
      <%= @post.answer %>
    </p>

    <div class="socialbtns">
      <!-- AddThis Button BEGIN -->
      <span class="addthis_toolbox addthis_default_style">
      <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
      <a class="addthis_button_tweet"></a>
      <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
      <a class="addthis_button_pinterest_pinit" pi:pinit:layout="horizontal"></a>
      </span>
      <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53668e3c32b9585d"></script>
      <!-- AddThis Button END -->
    </div>  

    <%=render 'layouts/adminbtn' %>
  </div>


  <div class="panel-footer">
    <div class="fb-comments" data-href="http://example.com/comments" data-width="600" data-numposts="3" data-colorscheme="light"></div>
  </div>

</div>



